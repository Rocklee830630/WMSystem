                        </div>
                    </div> 
                    <div class="control-group">
                        <label class="control-label"><span class="required">*</span>入库数量：</label>
                        <div class="controls">
                            @Html.TextBox("name", "144", new { @class = "m-wrap large" })
                        </div>
                    </div>
                    @*<div class="control-group">
                        <label class="control-label"><span class="required">*</span>单价(元)：</label>
                        <div class="controls">
