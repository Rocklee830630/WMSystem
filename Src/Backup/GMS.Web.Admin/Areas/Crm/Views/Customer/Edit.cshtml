@using GMS.Framework.Contract
@using GMS.Framework.Web.Controls
@using GMS.Crm.Contract
@using GMS.Web
@model Customer
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        .controls label
        {
            display:inline;
        }
    </style>
}
@section PageSpecificJavascriptIncludes{
}
@section MainContent{
<div class="portlet-body form-horizontal form-bordered form-row-stripped">
    <div class="row-fluid"> 

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>客户姓名：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.Name, new { @class = "m-wrap" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Name)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>客户编号：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.Number, new { @class = "m-wrap" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Number)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>客户电话：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.Tel, new { @class = "m-wrap" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Tel)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>电子邮件：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.Email, new { @class = "m-wrap" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>通讯地址：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.Address, new { @class = "m-wrap" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Address)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>性别：</label>
                <div class="controls">
                @Html.RadioBoxList("Gender")   
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Gender)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>客户类型：</label>
                <div class="controls">
                @Html.RadioBoxList("Category")   
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Category)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>职业：</label>
                <div class="controls">
                @Html.RadioBoxList("Profession")   
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Profession)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>客户年龄：</label>
                <div class="controls">
                @Html.RadioBoxList("AgeGroup")   
                <span class="help-inline">@Html.ValidationMessageFor(m => m.AgeGroup)</span>
                </div>
            </div>

    </div>
</div>
}

